// This MapReduce is designed based on the scenario of "Sentiment towards Bad Weather"

// Map functin to match each tweet to a particular keyword
// referring to a type of bad weather, and classify them
// according to the value of polarity in it
function(doc){
var keywords = ["rain","wind","cloudy","storm","fog","overcast","thunderstorm","Drizzle","Showers","rainy "];
    var text = doc.content.toLowerCase();
    for(i in keywords) {
        if(text.search(keywords[i].toLowerCase()) > -1){
            if(doc.polarity >0){
                emit(keywords[i],1);
            }
            else if(doc.polarity < 0){
              emit (keywords[i], -1);
            }
            else
              emit(keywords[i], 0);
        }
    }

}



// Reduce function is to sum up the number of tweets in each
// classification, and calculate the average value of polarity
// in each of thems
function(keys, values, rereduce) {
    if (!rereduce){
        var length = values.length
        return [sum(values) / length, length]
    }else{
        var length = sum(values.map(function(v){return v[1]}))
        var avg = sum(values.map(function(v){
        return v[0] * (v[1] / length)
    }))
    return [avg, length]
    }
}
